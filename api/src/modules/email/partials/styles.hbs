<style>
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    line-height: 1.6;
    color: #333;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  }

  .email-container {
    background-color: #ffffff;
    padding: 0;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 60%, #4338ca 100%);
    color: white;
    text-align: center;
    padding: 40px 20px;
    position: relative;
    overflow: hidden;
  }

  .header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, 
      rgba(255, 67, 87, 0.1) 0%, 
      rgba(255, 165, 2, 0.1) 25%, 
      rgba(55, 66, 250, 0.1) 50%,
      rgba(46, 213, 115, 0.1) 75%,
      rgba(116, 75, 162, 0.1) 100%);
    animation: gradient-shift 8s ease-in-out infinite alternate;
  }

  .header::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    right: -50%;
    bottom: -50%;
    background: radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    animation: floating-orb 6s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0% { opacity: 0.8; }
    100% { opacity: 1; }
  }

  @keyframes floating-orb {
    0%, 100% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(-10px, -15px) scale(1.1); }
    66% { transform: translate(10px, -10px) scale(0.9); }
  }

  .header * {
    position: relative;
    z-index: 2;
  }

  .logo-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 20px;
    animation: logo-entrance 1.5s ease-out;
  }

  @keyframes logo-entrance {
    0% {
      opacity: 0;
      transform: translateY(-30px) scale(0.8);
    }
    60% {
      transform: translateY(5px) scale(1.05);
    }
    100% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .logo-image {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    border: 4px solid rgba(255, 255, 255, 0.9);
    margin-bottom: 18px;
    object-fit: contain;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    padding: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .logo-image:hover {
    transform: scale(1.05) rotate(5deg);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3);
  }

  .logo-placeholder {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    border: 4px solid rgba(255, 255, 255, 0.9);
    margin-bottom: 18px;
    background: linear-gradient(135deg, #3742fa 0%, #5352ed 50%, #4338ca 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25);
    transition: all 0.3s ease;
    position: relative;
  }

  .logo-placeholder::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #ff4757, #ffa502, #3742fa, #2ed573);
    border-radius: 50%;
    z-index: -1;
    animation: rainbow-border 3s linear infinite;
  }

  @keyframes rainbow-border {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .logo-placeholder:hover {
    transform: scale(1.05) rotate(5deg);
    box-shadow: 0 12px 40px rgba(55, 66, 250, 0.4);
  }

  .logo-icon {
    font-size: 36px;
    filter: grayscale(100%) brightness(0) invert(1);
    animation: pulse-icon 2s ease-in-out infinite;
  }

  @keyframes pulse-icon {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .logo-text {
    font-size: 36px;
    font-weight: 900;
    letter-spacing: 3px;
    text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.4);
    margin-bottom: 5px;
    font-family: 'Arial Black', Arial, sans-serif;
  }

  .logo-letter {
    display: inline-block;
    transition: all 0.3s ease;
    animation: letter-float 2s ease-in-out infinite;
  }

  .logo-letter:hover {
    transform: scale(1.2) rotate(10deg);
  }

  .logo-letter:nth-child(1) { animation-delay: 0s; }
  .logo-letter:nth-child(2) { animation-delay: 0.1s; }
  .logo-letter:nth-child(3) { animation-delay: 0.2s; }
  .logo-letter:nth-child(4) { animation-delay: 0.3s; }
  .logo-letter:nth-child(5) { animation-delay: 0.4s; }
  .logo-letter:nth-child(6) { animation-delay: 0.5s; }

  @keyframes letter-float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-3px); }
  }

  .logo-letter.red {
    color: #ff4757;
    text-shadow: 0 0 20px rgba(255, 71, 87, 0.6);
  }

  .logo-letter.yellow {
    color: #ffa502;
    text-shadow: 0 0 20px rgba(255, 165, 2, 0.6);
  }

  .logo-letter.blue {
    color: #3742fa;
    text-shadow: 0 0 20px rgba(55, 66, 250, 0.6);
  }

  .tagline {
    font-size: 16px;
    opacity: 0.95;
    font-weight: 400;
    letter-spacing: 1px;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
    background: linear-gradient(45deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0.8));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: tagline-glow 3s ease-in-out infinite alternate;
  }

  @keyframes tagline-glow {
    0% { opacity: 0.9; }
    100% { opacity: 1; }
  }

  .content-wrapper {
    padding: 30px;
  }

  .title {
    font-size: 28px;
    margin-bottom: 20px;
    text-align: center;
    font-weight: 600;
  }

  .title.verification {
    color: #3742fa;
    background: linear-gradient(45deg, #3742fa, #5352ed);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title.reset {
    color: #ff4757;
    background: linear-gradient(45deg, #ff4757, #ff3838);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title.welcome {
    color: #2ed573;
    background: linear-gradient(45deg, #2ed573, #1e90ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title.support {
    color: #ffa502;
    background: linear-gradient(45deg, #ffa502, #ff6348);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .greeting {
    font-size: 18px;
    margin-bottom: 20px;
    color: #2f3542;
  }

  .content {
    margin-bottom: 25px;
    font-size: 16px;
    color: #2f3542;
    line-height: 1.7;
  }

  .otp-container {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 12px;
    padding: 25px;
    text-align: center;
    margin: 25px 0;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .otp-container.verification {
    border: 3px solid #3742fa;
    background: linear-gradient(135deg, #e8eaf6 0%, #c5cae9 100%);
  }

  .otp-container.reset {
    border: 3px solid #ff4757;
    background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  }

  .otp-code {
    font-size: 40px;
    font-weight: bold;
    letter-spacing: 8px;
    margin: 15px 0;
    font-family: 'Courier New', monospace;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
  }

  .otp-code.verification {
    color: #3742fa;
  }

  .otp-code.reset {
    color: #ff4757;
  }

  .otp-label {
    font-size: 14px;
    color: #666;
    margin-bottom: 10px;
    font-weight: 500;
  }

  .warning {
    background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
    border: 1px solid #ffeaa7;
    border-radius: 10px;
    padding: 20px;
    margin: 20px 0;
    color: #856404;
    border-left: 4px solid #ffa502;
  }

  .security-notice {
    background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
    border: 1px solid #f5c6cb;
    border-radius: 10px;
    padding: 20px;
    margin: 20px 0;
    color: #721c24;
    border-left: 4px solid #ff4757;
  }

  .welcome-notice {
    background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
    border: 1px solid #c3e6cb;
    border-radius: 10px;
    padding: 20px;
    margin: 20px 0;
    color: #155724;
    border-left: 4px solid #2ed573;
  }

  .footer {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    text-align: center;
    padding: 30px 20px;
    color: #6c757d;
    font-size: 14px;
    border-top: 1px solid #dee2e6;
  }

  .button {
    display: inline-block;
    background: linear-gradient(135deg, #3742fa 0%, #5352ed 100%);
    color: white;
    padding: 15px 35px;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    margin: 20px 0;
    box-shadow: 0 4px 15px rgba(55, 66, 250, 0.3);
    transition: all 0.3s ease;
  }

  .button.welcome {
    background: linear-gradient(135deg, #2ed573 0%, #1e90ff 100%);
    box-shadow: 0 4px 15px rgba(46, 213, 115, 0.3);
  }

  .button:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(55, 66, 250, 0.4);
  }

  .highlight {
    color: #3742fa;
    font-weight: bold;
    background: linear-gradient(45deg, #3742fa, #5352ed);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin: 25px 0;
  }

  .feature-item {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 20px;
    border-radius: 12px;
    border-left: 4px solid;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease;
  }

  .feature-item:nth-child(1) {
    border-left-color: #ff4757;
  }

  .feature-item:nth-child(2) {
    border-left-color: #ffa502;
  }

  .feature-item:nth-child(3) {
    border-left-color: #3742fa;
  }

  .feature-item:nth-child(4) {
    border-left-color: #2ed573;
  }

  .feature-item:hover {
    transform: translateY(-2px);
  }

  .feature-title {
    font-weight: bold;
    color: #2f3542;
    margin-bottom: 8px;
    font-size: 16px;
  }

  .feature-description {
    font-size: 14px;
    color: #666;
    line-height: 1.5;
  }

  .support-details {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-radius: 12px;
    padding: 25px;
    margin: 25px 0;
    border-left: 4px solid #ffa502;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .detail-row {
    display: flex;
    margin-bottom: 12px;
  }

  .detail-row:last-child {
    margin-bottom: 0;
  }

  .detail-label {
    font-weight: 600;
    color: #2f3542;
    min-width: 80px;
    margin-right: 15px;
  }

  .detail-value {
    color: #666;
    flex: 1;
  }

  .message-container {
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border: 1px solid #dee2e6;
    border-radius: 12px;
    padding: 25px;
    margin: 25px 0;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  }

  .message-title {
    color: #2f3542;
    margin-bottom: 15px;
    font-size: 18px;
    font-weight: 600;
  }

  .message-content {
    white-space: pre-wrap;
    line-height: 1.7;
    color: #555;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 20px;
    border-radius: 8px;
    border-left: 4px solid #ffa502;
  }

  .reply-notice {
    background: linear-gradient(135deg, #e7f3ff 0%, #b8daff 100%);
    border: 1px solid #b8daff;
    border-radius: 10px;
    padding: 20px;
    margin: 20px 0;
    color: #004085;
    border-left: 4px solid #3742fa;
  }

  @media (max-width: 480px) {
    .features-grid {
      grid-template-columns: 1fr;
    }

    .otp-code {
      font-size: 32px;
      letter-spacing: 4px;
    }

    .logo-text {
      font-size: 28px;
      letter-spacing: 2px;
    }

    .logo-image, .logo-placeholder {
      width: 70px;
      height: 70px;
      margin-bottom: 15px;
    }

    .logo-icon {
      font-size: 28px;
    }

    .title {
      font-size: 24px;
    }

    .tagline {
      font-size: 14px;
      letter-spacing: 0.5px;
    }

    .header {
      padding: 30px 15px;
    }

    .logo-container {
      margin-bottom: 15px;
    }
  }
</style>